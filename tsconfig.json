{
    "compilerOptions": {
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "Bundler",
        "module": "ES2015",
        "outDir": "dist",
        "sourceMap": false,
        "declaration": true,
        "declarationMap": false,
        "lib": [
            "es2022",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
